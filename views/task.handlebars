
  <div class="row center">
    <div class="col s12 m12">
      <div class="card">
        <div class="row">
          <div class="col s12 m6">
            {{#each rawData.Pictures}}
            <div class="card-image">
              <img src="{{link}}" alt="{{title}}" style="width: 100%; margin: 20px">
            </div>
            {{/each}}
          </div>
          <div class="col s12 m6">
            <div class="card-content">
              <div class="taskUserId" id={{rawData.userId}}></div>
              <span class="card-title" id={{rawData.id}}>Task: {{rawData.title}} </span>
              <h6>Location: {{rawData.location}}</h6>
              <h6>Intitial Price: ${{rawData.initial_price}}</h6>
              <h6>Leading Bidder: {{#each rawData}} {{Bids.Task.username}} {{/each}} </h6>
              <h6>Current Bid: ${{#each rawData.Bids}} {{bid_price}} {{/each}} </h6>
              <h6>Bid End Time: {{rawData.bid_end_time}}</h6>
              {{!-- bid --}}

              <div class="input-group bid">
                <label for="bid">What's your bid?</label>
                <input type="number" name="bid" id="bid" class="input-box" placeholder="100.00">
              </div>

              {{!-- Form Submit --}}
              <button type="submit" class="btn btn-reverse" id="submitBtn"> Submit
              </button>
              {{!-- </form> --}}
              <br><br><br>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


